#!/bin/bash
IFS=' ' read -r -a array <<< "$@"
FOUND=false
PROXY_PATH="/tmp/x509up_u$UID"
for option in "${array[@]}"
do
    if [ "$option" =  "--out" ] ; then
        FOUND=true
    else
        if $FOUND; then
            PROXY_PATH=$option
            FOUND=false
        fi
    fi
done

voms-proxy-init-helper $@
if [ -f $PROXY_PATH ]; then
    echo "Normalizing proxy at $PROXY_PATH"
    cat "$PROXY_PATH" | tr -d '\n' > "$PROXY_PATH.nml"
    echo "The normalized proxy file was saved to $PROXY_PATH.nml"
fi
